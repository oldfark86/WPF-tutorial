<Window x:Class="Wpf_tut16_Expander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_tut16_Expander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="LightBlue">
            <TextBlock Text="Name" FontSize="16"/>
            <Expander Header="More Details">
                <TextBlock  Text="Description" FontSize="16"/>
            </Expander>
            <Button Name="btnDetail" Width="100" Height="25" Content="Detail"
                    Click="btnDetail_Click"/>
        </StackPanel>
        <Expander Grid.Column="1" Name="expanderDetail" ExpandDirection="Left" Background="DarkGray"
                  BorderThickness="0">
            <Rectangle  Fill="DarkGray" Width="125"/>
        </Expander>
    </Grid>
</Window>
