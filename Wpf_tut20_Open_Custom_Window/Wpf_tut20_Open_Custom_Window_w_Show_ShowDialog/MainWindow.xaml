<Window x:Class="Wpf_tut20_Open_Custom_Window_w_Show_ShowDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_tut20_Open_Custom_Window_w_Show_ShowDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="btnNormal" Width="100" Height="40" Content="Normal" Margin="5" Click="btnNormal_Click"/>
            <Button Name="btnModal" Width="100" Height="40" Content="Modal" Margin="5" Click="btnModal_Click"/>
            <TextBox Name="txtInput" Width="200" Height="40" FontFamily="20"/>
        </StackPanel>
    </Grid>
</Window>
